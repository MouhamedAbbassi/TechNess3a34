{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block body %}

    <body>

    <!--  Start Header Area -->
    <div class="top-header-area bg-color-091c47">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8">

                </div>

                <div class="col-lg-4">
                    <ul class="header-right-content">
                        <li>
                            <i class="ri-user-3-line"></i>
                            <a href="{{path('login')}}">Login</a>
                        </li>
                        <li>
                            <select class="form-select" aria-label="Default select example">
                                <option selected>English</option>
                                <option value="1">China</option>
                                <option value="2">العربيّة</option>
                                <option value="3">Germany</option>
                                <option value="4">Portugues</option>
                            </select>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End Header Area -->



    <!-- Start Page Banner Area -->
    <div class="page-banner-area bg-22 pt-100">
        <div class="container">
            <div class="page-banner-content">
                <h2>Forget password</h2>
            </div>
        </div>
    </div>
    <!-- End Page Banner Area -->

    <!-- Start My Account Area -->
    <div class="my-account-area ptb-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    {{ form_start(emailForm, {'attr': {'id': 'emailForm'}}) }}
                    <form method="post">
                        {{ form_widget(emailForm.email,{'attr':{'class':'form-control','placeholder': "Email"}}) }}


                        <div class="d-flex align-items-center">
                            <button style="margin-top: 20px" type="submit" class="default-btn me-3">
                                Send Me Email
                            </button>
                            <p style="margin-top: 40px">Don’t have an account? <a href="{{path('register')}}">Register now</a></p>
                        </div>
                        {{ form_row(emailForm._token) }}
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- End My Account Area -->

    <!-- Start Footer Area -->
    <!-- End Footer Area -->

    <!-- Start Copyright Area -->
    <div class="copy-right-area">
        <div class="container">
            <p>© Bexi is Proudly Owned by <a href="https://envytheme.com/" target="_blank">EnvyTheme</a></p>
        </div>
    </div>
    <!-- End Copyright Area -->

    <!-- Start Go Top Area -->
    <div class="go-top">
        <i class="ri-arrow-up-s-fill"></i>
        <i class="ri-arrow-up-s-fill"></i>
    </div>
    <!-- End Go Top Area -->


    </body>

{% endblock %}