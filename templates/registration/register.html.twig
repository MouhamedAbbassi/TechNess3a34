{% extends 'base.html.twig' %}

{% block title %} {% endblock %}
{% block body %}

    <body>


    <!-- Start Page Banner Area -->
    <div class="page-banner-area bg-22 pt-100">
        <div class="container">
            <div class="page-banner-content">
                <h2>- Sign up -</h2>
                <ul>
                    <li>
                        <a href="{{path('home')}}">
                            <i class="ri-home-8-line"></i>
                            Home
                        </a>
                    </li>
                    <li>
                        <span>My Account</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Page Banner Area -->
    <!-- Start My Account Area -->
    <div class="my-account-area ptb-100">
        <div class="container">
            <div class="row">



                <div class="col-lg-6">
                        {{ form_start(registrationForm ,{'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(registrationForm.roles ,{'attr': {'class': 'default-btn me-3'} } ) }}
                        {{ form_row(registrationForm.nom,{'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(registrationForm.prenom,{'attr': {'novalidate': 'novalidate'}}) }}
                        {{ form_row(registrationForm.email ,{'attr': {'novalidate': 'novalidate'}}) }}

                        {{ form_row(registrationForm.plainPassword.first, { label: 'Password' }) }}
                        {{ form_row(registrationForm.plainPassword.second, { label: 'Password' }) }}
                        {{ form_row(registrationForm.agreeTerms) }}

                        <div class="d-flex align-items-center">
                            <button type="submit" class="default-btn me-3">
                                Register now
                            </button>
                            {{ form_end(registrationForm) }}

                            <p>Don’t have an account? <a >Login</a></p>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End My Account Area -->

    <!-- Start Footer Area -->
    <!-- End Footer Area -->

    <!-- Start Copyright Area -->
    <div class="copy-right-area">
        <div class="container">
            <p>© TechNess is Proudly Owned by <a href="#" target="_blank">EnvyTheme</a></p>
        </div>
    </div>
    <!-- End Copyright Area -->

    <!-- Start Go Top Area -->
    <div class="go-top">
        <i class="ri-arrow-up-s-fill"></i>
        <i class="ri-arrow-up-s-fill"></i>
    </div>
    <!-- End Go Top Area -->


    </body>

{% endblock %}