{% extends 'base.html.twig' %}

{% block title %} {% endblock %}

{% block content %}
    <div class="row">
        <!--end col-->
        <div class="col-xxl-12">
            <div class="card">
                <div class="card-body p-4">
                    <div class="tab-content">
                        <div class="tab-pane active" id="personalDetails" role="tabpanel">
                            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.nomMedecin) }}
                                            {{ form_widget(form.nomMedecin) }}
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-6">
                                        <div class="mb-3">
                                            {{ form_label(form.nomPatient) }}
                                            {{ form_widget(form.nomPatient) }}
                                        </div>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            {{ form_label(form.commentaire) }}
                                            {{ form_widget(form.commentaire) }}
                                            {{ form_errors(form.commentaire) }}
                                        </div>
                                    </div>
                                    <div id="repeater" class="col-lg-12 row mb-3">
                                        <div class="mb-3 col-md-12" data-repeater-list="ordonnance[ordonnanceMedicaments]">
                                            {% for ordMed in form.ordonnanceMedicaments %}
                                                <div data-repeater-item class="row mb-2">
                                                    <div class="col-4">
                                                        {{ form_widget(ordMed.medicament) }}
                                                    </div>
                                                    <div class="col-md-3">
                                                        {{ form_widget(ordMed.dosage) }}
                                                        {{ form_errors(ordMed.dosage) }}
                                                    </div>
                                                    <div class="col-md-3">
                                                        {{ form_widget(ordMed.duration) }}
                                                        {{ form_errors(ordMed.duration) }}
                                                    </div>
                                                    <div class="col-md-2">
                                                        <button type="button" data-repeater-delete class="btn btn-icon btn-danger">
                                                            <i class="bx bx-x "></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        </div>
                                        <button type="button" data-repeater-create class="btn btn-secondary col-md-1"><i class="ri-edit-box-line align-bottom"></i> Add</button>
                                    </div>
                                    <!--end col-->
                                    <div class="col-lg-12">
                                        <div class="hstack gap-2 justify-content-end">
                                            <button type="submit" class="btn btn-primary">Create</button>
                                            <button type="button" class="btn btn-soft-success">Cancel</button>
                                        </div>
                                    </div>
                                    <!--end col-->
                                </div>
                                <!--end row-->
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--end col-->
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('backOffice/js/custom/jquery.repeater.min.js') }}"></script>
    <script>
        $('#repeater').repeater({
            initEmpty: false,
            show: function() {
                $(this).slideDown(function() {
                });
            },
            hide: function(deleteElement) {
                $(this).slideUp(deleteElement)
            }
        })
    </script>
{% endblock %}
