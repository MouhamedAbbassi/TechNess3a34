{% extends 'base.html.twig' %}

{% block title %} {% endblock %}
{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('backOffice/css/custom/dataTables.bootstrap5.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
    <div class="row">
        <!--end col-->
        <div class="col-xxl-12">
            <div class="card" style="padding: 20px 20px;">
                <table class="table" id="ordonance-list">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>NomMedecin</th>
                        <th>NomPatient</th>
                        <th>Date</th>
                        <th>Commentaire</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ordonnance in ordonnances %}
                        <tr>
                            <td>{{ ordonnance.id }}</td>
                            <td>{{ ordonnance.nomMedecin }}</td>
                            <td>{{ ordonnance.nomPatient }}</td>
                            <td>{{ ordonnance.date ? ordonnance.date|date('Y-m-d') : '' }}</td>
                            <td>{{ ordonnance.commentaire }}</td>

                            <td>
                                <a href="{{ path('app_ordonnance_delete', {'id': ordonnance.id}) }}" onclick="return confirm('Do you want to delete this item?')"><img src="{{ asset('frontOffice/assets/images/delete.png') }}" alt="Logo"></a>
                                <a href="{{ path('app_ordonnance_edit', {'id': ordonnance.id}) }}"><img src="{{ asset('frontOffice/assets/images/edit2.png') }}" alt="Logo"></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ asset('backOffice/js/custom/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('backOffice/js/custom/dataTables.bootstrap5.min.js') }}"></script>
    <script>
        $('#ordonance-list').DataTable();
    </script>
{% endblock %}
